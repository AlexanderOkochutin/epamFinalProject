@model MvcPL.ViewModels.SendMessageModel
@{
    Layout = "~/Views/Shared/_Home.cshtml";
}
<div class="row topMargin">
    <div class="col-md-12" align="center">
        <div id="ProfileTo" hidden="hidden">@Model.Companion.Id.ToString()</div>
        <div id="ProfileFrom" hidden="hidden">@Model.I.Id.ToString()</div>
        <div id="RefreshArea">
            @{
                Html.RenderPartial("_History", Model);
            }
        </div>
        @Ajax.ActionLink("ActionLink", "SendMessage", new { id = 0, chatMessage = "" },
new AjaxOptions { UpdateTargetId = "RefreshArea", OnSuccess = "ChatOnSuccess", OnFailure = "ChatOnFailure" },
new { @id = "ActionLink", @style = "visibility:hidden;" })
        <div id="inputForm" class="navbar-fixed-bottom">
            <table>
                <tr>
                    <td rowspan="2"><textarea id="txtMessage" rows="3"></textarea></td>
                    <td><button id="btnMessage" value="Отправить">Отправить</button></td>                    
                </tr>
                <tr>                  
                    <td><button id="btnLogOff" value="Выйти">Выйти</button></td>
                </tr>
            </table>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
@Scripts.Render("~/Scripts/chat.js")