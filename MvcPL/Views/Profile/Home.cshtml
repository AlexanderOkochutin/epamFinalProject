@model MvcPL.ViewModels.ProfileModel
@{
    Layout = "~/Views/Shared/_Home.cshtml";
}
<style>
         .topMargin {
             margin-top: 3%;
         }
        .status {
            font-size: x-large;
        }
       .frame-square {
      background: #00bc8c;;
      border: 2px solid #000;
      display: inline-block;
      vertical-align: top;
      padding: 5px;
      width: 250px;
      height: 250px;
      margin-right: .5em;
      margin-bottom: .3em;
    }
       .frame-round {
      background: #00bc8c;;
      border: 2px solid #000;
      display: inline-block;
      vertical-align: top;
      padding: 2px;
      width: 60px;
      height: 60px;
      margin-right: .5em;
      margin-bottom: .3em;
    }

    .frame-round {
      border-radius: 50%;
      overflow: hidden;
    }
    .frame-round .crop {
      border-radius: 50%;
    }

    .crop {
      height: 100%;
      overflow: hidden;
      position: relative;
    }
    .crop img {
      display: block;
      min-width: 100%;
      min-height: 100%;
      margin: auto;
      position: absolute;
      top: -100%;
      right: -100%;
      bottom: -100%;
      left: -100%;
    }
</style>

<div class="container-fluid topMargin">
    <div class="row ">
        <div class="col-md-2">
            <nav id="nav">
                <ul>
                    <li>@Html.ActionLink("Messages", "Message", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-block" })</li>
                    <li>@Html.ActionLink("Friends", "Friends", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-block" })</li>
                    <li>@Html.ActionLink("Photos", "Photo", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-block" })</li>
                </ul>
            </nav>
        </div>
        <div class="col-md-3">
            <div align="center">
                <div class="frame-square img-rounded">
                    <div class="crop">
                        @Html.Partial("_ProfilePhoto", Model.Id)
                    </div>
                </div>
            </div>
            <div align="center">@Model.RelationStatus</div>
        </div>
        <div class="col-md-7">
            <div align="left">
                <div class="status">@(@Model.LastName + @Model.FirstName)</div>
                <div>@Model.BirthDay</div>
                <div>@Model.Gender</div>
                @Html.ActionLink("Edit", "Edit", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-sm" })
            </div>
        </div>
    </div>
