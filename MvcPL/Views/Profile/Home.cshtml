@model MvcPL.ViewModels.ProfileModel
@{
    Layout = "~/Views/Shared/_Home.cshtml";
}
<style>
    .topMargin {
        margin-top: 3%;
    }
    .status {
        font-size: x-large;
    }
</style>
<div class="container-fluid topMargin">
    <div class="row">
        <div class="col-md-2">
            <nav id="nav">
                <ul>
                    <li>@Html.ActionLink("Messages", "Message", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-block" })</li>
                    <li>@Html.ActionLink("Friends", "Friends", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-block" })</li>
                    <li>@Html.ActionLink("Photos", "Photo", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-block" })</li>
                </ul>
            </nav>
        </div>
        <div class="col-md-3">
            <img src="~/images/default-avatar.jpg" alt="avatar" class="img-rounded" width="250" height="250" />
            <p/>
            <div align="center">
                @Html.ActionLink("Change Avatar", "ChangeAvatar", "Profile", null, htmlAttributes: new {@class = "btn btn-default btn-xs"})
            </div>
            <p/>
            <div align="center">@Model.RelationStatus</div>
        </div>
        <div class="col-md-7">
            <div align="left">                
                <div class="status">@(@Model.LastName+@Model.LastName)</div>
                <div>@Model.BirthDay</div>
                <div>@Model.Gender</div>
                @Html.ActionLink("Edit", "Edit", "Profile", null, htmlAttributes: new { @class = "btn btn-default btn-sm" })
            </div>
        </div>
    </div>
    
    <div class="row topMargin">
        <div class="col-md-2">           
        </div>
        <div class="col-md-3">
            <div>Друзья</div>
            <div>
                <img src="~/testImages/543novrbKac.jpg" alt="avatar" class="img-circle" width="60" height="60" />
                <img src="~/testImages/A-Nn65MbX1c.jpg" alt="avatar" class="img-circle" width="60" height="60" />
                <img src="~/testImages/AKUKzxqvEkc.jpg" alt="avatar" class="img-circle" width="60" height="60" />
                <img src="~/testImages/BR7V8izRffg.jpg" alt="avatar" class="img-circle" width="60" height="60" />
                <img src="~/testImages/FFS4BxaIYGw.jpg" alt="avatar" class="img-circle" width="60" height="60" />
            </div>
        </div>
        <div class="col-md-7">
            <div align="center">
                <h1>Стена</h1>
            </div>
        </div>
    </div>
</div>